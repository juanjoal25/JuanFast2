<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="51dp" />

        <TextView
            android:id="@+id/textViewTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="24sp"
            android:text="@string/titulo"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:typeface="serif" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="413dp"
            app:srcCompat="@drawable/logo4" />

        <Button
            android:id="@+id/buttonReservar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="realizarReserva"
            android:text="@string/reservas" />

        <Button
            android:id="@+id/buttonSedes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="consultarSedes"
            android:text="@string/sedes" />

        <Button
            android:id="@+id/buttonMenú"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="verMenu"
            android:text="@string/menú" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>